//prisma/schema/user.prisma
model User {
    id                     String                   @id @default(uuid())
    username               String                   @unique
    firstName              String
    lastName               String
    displayName            String
    email                  String                   @unique
    passwordHash           String
    phoneNumber            String                   @default("")
    streetAddress          String
    suburb                 String?
    townCity               String
    postcode               String
    country                String
    avatarUrl              String?
    backgroundUrl          String?
    agreeTerms             Boolean                  @default(false)
    role                   UserRole                 @default(USER)
    tier                   Tier                     @default(BRONZE)
    failedAttempts         Int                      @default(0) // Updated field name
    lastFailedAttempt      DateTime?
    keys                   Key[]
    Session                Session[]
    Product                Product[] //admin and public
    Slide                  Slide[] //editor
    NewArrival             NewArrival[]
    BestSeller             BestSeller[]
    OnSale                 OnSale[]
    NewsletterSubscription NewsletterSubscription[]
    Audio                  Audio[]
    Order                  Order[]
    TierAppForm            TierAppForm[]
    Cart                   Cart?
    Wishlist               Wishlist? // Relation to user's wishlist
    SupportMessage         SupportMessage[]
    createdAt              DateTime                 @default(now())
    updatedAt              DateTime                 @updatedAt

    @@map("users")
}

model Key {
    id             String   @id @default(uuid())
    hashedPassword String?
    userId         String
    primary        Boolean  @default(true)
    user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    createdAt      DateTime @default(now())
    updatedAt      DateTime @updatedAt

    @@index([userId])
    @@map("keys")
}
